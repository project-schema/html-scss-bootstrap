{
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": true,
  "plugins": ["prettier-plugin-organize-attributes", "prettier-plugin-css-order"],

  "overrides": [
    {
      "files": [".*", "*.json", "*.md", "*.toml", "*.yml", "*.html", "*.scss"],
      "options": {
        "useTabs": false
      }
    }
  ]
}
